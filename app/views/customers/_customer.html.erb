<div class="column is-one-fifth">
  <div class="card box">
    <% if customer.image.present? %>
    <div class="card-image">
      <figure class="image is-2-5">
        <%= image_tag customer.image.variant(resize_to_limit:[250,250]) %>
      </figure>
    </div>
    <%end%>
    <div class="card-content has-text-centered mt-2">
      <p class="title is-4"><%= customer.name %></p>
      <p>Phone: <%=customer.phone%></p>
      <p>Email: <%=customer.email%></p>
      <p>Notes: <%=customer.email%></p>
    </div>
  </div>
</div>
